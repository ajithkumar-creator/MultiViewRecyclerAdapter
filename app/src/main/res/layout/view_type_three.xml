<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardlist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/length_2dp"
    android:layout_marginLeft="@dimen/length_2dp"
    android:layout_marginRight="@dimen/length_2dp"
    android:layout_marginTop="@dimen/length_2dp"
    app:cardCornerRadius="@dimen/length_14sp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/card_elevation"
    card_view:cardElevation="@dimen/card_elevation"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/item_image_three"
            android:layout_width="@dimen/length_80dp"
            android:layout_height="@dimen/length_80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/length_5dp"
            android:gravity="center_vertical" />

        <RelativeLayout
            android:id="@+id/top_icon_detail"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/length_80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/length_5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="@dimen/length_10dp"
                android:ellipsize="marquee"
                android:focusable="false"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/item_american"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/length_14sp" />

            <TextView
                android:id="@+id/item_short_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_name_three"
                android:layout_marginTop="7dp"
                android:ellipsize="marquee"
                android:focusable="false"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/item_american_desc"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/length_14sp" />

            <TextView
                android:id="@+id/item_price_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:freezesText="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/item_american_price"
                android:textColor="@android:color/background_dark"
                android:textSize="@dimen/length_14sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
